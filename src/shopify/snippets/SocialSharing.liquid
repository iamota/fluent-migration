<div class="SocialSharing QuickView--hide">
  <div class="SocialSharing__title">{% include 'INF-translation', translate: 'general.social.share_title', default: 'Share this' %}</div>

  {% if settings.share_facebook %}
    <a target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}">
      <i aria-hidden="true" class="SocialSharing__icon fab fa-facebook"></i>
      <span class="SocialSharing__text" aria-hidden="true" data-prevent-tab>{{ 'general.social.share_on_facebook' | t }}</span>
      <span class="visually-hidden">{{ 'general.social.alt_text.share_on_facebook' | t }}</span>
    </a>
  {% endif %}

  {% if settings.share_twitter %}
    <a target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}">
      <i aria-hidden="true" class="SocialSharing__icon fab fa-twitter"></i>
      <span class="SocialSharing__text"  aria-hidden="true" data-prevent-tab>{{ 'general.social.share_on_twitter' | t }}</span>
      <span class="visually-hidden">{{ 'general.social.alt_text.share_on_twitter' | t }}</span>
    </a>
  {% endif %}

  {% if settings.share_pinterest %}
    <a target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}">
      <i aria-hidden="true" class="SocialSharing__icon fab fa-pinterest"></i>
      <span class="SocialSharing__text" aria-hidden="true" data-prevent-tab>{{ 'general.social.share_on_pinterest' | t }}</span>
      <span class="visually-hidden">{{ 'general.social.alt_text.share_on_pinterest' | t }}</span>
    </a>
  {% endif %}
</div>
